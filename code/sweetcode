data$age[data$age == 4] <- "35 - 39"
data$age[data$age == 5] <- "40 - 44"
data$age[data$age == 6] <- "45 - 49"
data$age[data$age == 7] <- "50 - 54"
data$age[data$age == 8] <- "55 - 59"
data$age[data$age == 9] <- "60 - 64"
